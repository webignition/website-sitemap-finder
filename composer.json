{
    "name": "webignition/website-sitemap-finder",
    "description": "Finds the sitemap(.xml) for a given website",
    "keywords": ["sitemap"],
    "homepage": "https://github.com/webignition/website-sitemap-finder",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "jon@webignition.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\WebsiteSitemapFinder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\Tests\\WebsiteSitemapFinder\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=5.6.0",
        "guzzlehttp/guzzle":">=5.2.0,<5.3",
        "webignition/url":">=0.1,<2.0",
        "webignition/web-resource-service":"1.3.1",
        "webignition/absolute-url-deriver":">=1.3.3,<2.0",
        "webignition/robots-txt-file":"2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "minimum-stability":"stable",
    "prefer-stable":true
}